{
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "moduleResolution": "Node16",
        "isolatedModules": false,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitUseStrict": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist",
        "lib": [
            "es6",
            "dom",
            "scripthost"
        ]
    },
    "include": [
        "./src/**/*",
        "src/test/**/*"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
