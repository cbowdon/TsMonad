{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitUseStrict": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "lib",
        "lib": [
            "es6",
            "dom",
            "scripthost"
        ]
    },
    "include": [
        "./src/**/*",
        "./test/**/*"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
